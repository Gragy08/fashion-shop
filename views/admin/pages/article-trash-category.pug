extends ../layouts/default.pug

block main
  .row
    .col-12
      .card
        .card-header
          .row.align-items-center
            .col
              h4.card-title #{pageTitle}
            // end col
            .col-auto
              a.btn.btn-info(
                href=`/${pathAdmin}/article/category`
                )
                <i class="fa-solid fa-arrow-left me-1"></i>
                | Quay lại danh sách
          // end row
        // end card-header
        .card-body.pt-0
          .table-responsive
            table.table.table-striped.mb-0
              thead.table-light
                tr
                  th STT
                  th Tên danh mục
                  th Danh mục cha
                  th Trạng thái
                  th Lượt xem
                  th.text-end Hành động
              tbody
                each item, index in recordList
                  tr
                    td #{index + 1}
                    td #{item.name}
                    td #{item.parentName}
                    td
                      if (item.status == "active")
                        span.badge.bg-success Hoạt động
                      else if (item.status == "inactive")
                        span.badge.bg-danger Tạm dừng
                    td #{item.view}
                    td.text-end
                      a(
                        href="javascript:;"
                        button-api
                        data-method="PATCH"
                        data-api=`/${pathAdmin}/article/category/undo/${item.id}`
                        class="me-2"
                        style="font-size: 16px;"
                        )
                        <i class="fa-solid fa-rotate-left"></i>
                      a(
                        href="javascript:;"
                        button-api
                        data-method="DELETE"
                        data-api=`/${pathAdmin}/article/category/destroy/${item.id}`
                        style="font-size: 16px; margin-right: 10px;"
                        )
                        <i class="fa-solid fa-trash text-danger"></i>
    // end col